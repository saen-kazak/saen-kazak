body {background-color:222222;color:white;font-family:Arial;padding:40px;}

#commandlineframe {
	display:none;
	overflow:auto;
	width:40%;
	height:25%;
	border-radius:40px;
	border:5px solid white;
	padding:1%;
	position:fixed;
	top:50%;
	left:50%;
	-ms-transform: translateX(-50%) translateY(-50%);
	-webkit-transform: translate(-50%,-50%);
	transform: translate(-50%,-50%);
	background:black;
	
}

.optionbtn {
	width:200px;
	height:100px;
	border-radius:30px;
	height:100px;
    font-size: 25px;
}

.optionbtn:hover {
	cursor: pointer;
	border: 1px solid white;
}